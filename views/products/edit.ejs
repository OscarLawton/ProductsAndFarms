<!DOCTYPE html>
<html>
    <head>
        <title>All Products</title>
    </head>
    <body>
        <h1>Edit Product</h1>
        <form action="/products/<%=product._id%>?_method=PUT" method="POST">
            <label for="name">Product Name</label>
            <input type="text" name="name" id="name" placeholder="product name" value="<%= product.name %>">
            <label for="price">Price</label>
            <input type="number" id="price" name="price" placeholder="price" value="<%= product.price %>">
            <label for="category">Category</label>
            <select name="category" id="category">
                <% if(product.category == "fruit") {%>
                    <option value="fruit" selected>fruit</option>
                    <option value="vegetable">vegetable</option>
                    <option value="dairy">dairy</option>
                <% } else if(product.category == "vegetable") { %>
                    <option value="fruit" >fruit</option>
                    <option value="vegetable" selected>vegetable</option>
                    <option value="dairy">dairy</option>
                <% } else if(product.category == "dairy") { %>
                    <option value="fruit" >fruit</option>
                    <option value="vegetable">vegetable</option>
                    <option value="dairy" selected>dairy</option>
                <% } else { %>    
                    console.log('no product')
                <%}%>
                
            </select>
            <button>Submit</button>
        </form>
        <a href="/products/<%= product._id%>">Cancel</a>
        <a href="/farms">All Farms</a>
        <br>
        <a href="/products">All Products</a>
    </body>
</html>